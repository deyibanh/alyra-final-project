{
    "env": {
        "browser": false,
        "es2021": true,
        "mocha": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "plugins": [
        "prettier",
        "node"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["hardhat.config.js"],
            "globals": {
                "task": true
            }
        }
    ],
    "rules": {
        "prettier/prettier": "error",
        "indent": ["error", 4]
    },
    "root": true
}
